<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle Booking Service"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:textColor="@color/primary_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book your ride easily"
        android:textSize="16sp"
        android:layout_marginBottom="48dp"
        android:gravity="center" />

    <Button
        android:id="@+id/btn_book_vehicle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book a Vehicle"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/primary_color"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_view_bookings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📋 Admin Booking Management"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/secondary_color"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_analytics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📊 Analytics Dashboard"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/primary"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_vehicle_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🔍 Search Vehicles"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_admin_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="👨‍💼 Admin Dashboard"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button_secondary"
        android:textColor="@android:color/white" />

</LinearLayout>
