<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header with Search -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/primary_color"
        android:padding="16dp">

        <!-- Title and Counter -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="My Bookings"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_booking_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 bookings"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔍"
                android:textSize="18sp"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search bookings..."
                android:background="@android:color/transparent"
                android:textSize="14sp"
                android:maxLines="1" />

            <TextView
                android:id="@+id/btn_clear_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✕"
                android:textSize="16sp"
                android:padding="4dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Filter Chips -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chip_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:textColor="@color/primary_color"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/chip_selected"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/chip_pending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⏳ Pending"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:background="@drawable/chip_unselected"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/chip_confirmed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✅ Confirmed"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:background="@drawable/chip_unselected"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/chip_in_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🚗 In Progress"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:background="@drawable/chip_unselected"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/chip_completed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🏁 Completed"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:background="@drawable/chip_unselected"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/chip_cancelled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="❌ Cancelled"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:background="@drawable/chip_unselected"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

    <!-- Sort Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort by:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/btn_sort_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📅 Date"
            android:textSize="12sp"
            android:textColor="@color/primary_color"
            android:textStyle="bold"
            android:background="@drawable/chip_selected"
            android:padding="6dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/btn_sort_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🏷️ Status"
            android:textSize="12sp"
            android:textColor="@color/text_primary"
            android:background="@drawable/chip_unselected"
            android:padding="6dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/btn_sort_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🗺️ Route"
            android:textSize="12sp"
            android:textColor="@color/text_primary"
            android:background="@drawable/chip_unselected"
            android:padding="6dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Results Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:gravity="center_vertical"
        android:background="@color/divider">

        <TextView
            android:id="@+id/tv_results_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Showing all bookings"
            android:textSize="12sp"
            android:textColor="@color/text_secondary" />

        <TextView
            android:id="@+id/btn_clear_filters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear filters"
            android:textSize="12sp"
            android:textColor="@color/primary_color"
            android:textStyle="bold"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Empty state -->
    <LinearLayout
        android:id="@+id/layout_empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_empty_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📋"
            android:textSize="48sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tv_empty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Bookings Yet"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_empty_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your booking history will appear here"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@android:color/darker_gray" />

        <Button
            android:id="@+id/btn_make_first_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make Your First Booking"
            android:layout_marginTop="24dp"
            android:background="@color/primary_color"
            android:textColor="@android:color/white"
            android:padding="12dp" />

    </LinearLayout>

    <!-- Bookings list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_bookings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

</LinearLayout>